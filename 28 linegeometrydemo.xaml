<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
        xmlns:x="http://schemas.microsoft.com /winfx/2006/xaml">    
  <Path Stroke="Blue" StrokeThickness="3">     // stroke атрибут   
    <Path.Data> // на панеле канвас можно разместить несколько классов path
      <LineGeometry StartPoint="96 96"  // класс рисующий две линии разного цвета пересекающиеся     
                    EndPoint="192 192" />   
      </Path.Data> 
     </Path>
  <Path Stroke="Red" StrokeThickness="3">
    <Path.Data>
      <LineGeometry StartPoint="192 96"
                    EndPoint="96 192" /> 
       </Path.Data>
     </Path.Data>
  </Canvas>
